{
    "scopeName" :"source.dml",
    "name":"DML",
    "comment": "Gembase DML Language",
    "fileTypes": [
        "dml"
    ],
    "patterns": [
        {
            "comment": "Comment",
            "begin": "!",
            "end": "$",
            "name": "comment.line.dml"
        },
        { "include": "#source" }
    ],
    "repository": {
        "source": {
            "patterns": [
                { "include": "#titles" },
                { "include": "#strings" }          
            ]
        },
        
        "titles": {
            "patterns": [
                {
                    "name": "markup.heading.dml",
                    "match": "TITLE"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
					"name": "string.dml",
					"begin": "(\"|\\')",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.dml"
						}
					},
					"end": "(\"|\\')",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.dml"
						}
					}
                }
            ]
        }
    }
}