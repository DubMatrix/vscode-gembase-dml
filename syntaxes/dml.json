{
    "scopeName" :"source.dml",
    "name":"DML",
    "comment": "Gembase DML Language",
    "fileTypes": [
        "dml"
    ],
    "patterns": [
        {
            "comment": "Comment",
            "begin": "!",
            "end": "$",
            "name": "comment.line.dml"
        },
        { "include": "#source" }
    ],
    "repository": {
        "source": {
            "patterns": [
                { "include": "#titles" }          
            ]
        },
        
        "titles": {
            "patterns": [
                {
                    "name": "markup.heading.dml",
                    "match": "TITLE"
                }
            ]
        }
    }
}